<Window x:Class="Part2Project_GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="566" Width="1380.333">
    <Window.InputBindings>
        <KeyBinding Key="Escape" Command="{Binding CloseCommand}"></KeyBinding>
        <KeyBinding Key="T" Command="{Binding TestCommand}"></KeyBinding>
    </Window.InputBindings>
    <Window.Resources>
        <DataTemplate x:Key="ItemTemplate">
            <WrapPanel>
                <Image Width="320" Height="240" Source="{Binding}" HorizontalAlignment="Center" RenderOptions.BitmapScalingMode="LowQuality"/>
            </WrapPanel>
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <Button Command="{Binding SelectFolderCommand}" Content="Select Folder" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75"/>
        <Button Command="{Binding TestCommand}" Content="Test" HorizontalAlignment="Left" Margin="90,10,0,0" VerticalAlignment="Top" Width="75"/>
        <DockPanel Margin="0,44,0,0">
            <ListView DockPanel.Dock="Left" ItemsSource="{Binding Images}" ItemTemplate="{StaticResource ItemTemplate}" Width="1020" >
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="3"/>
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>
            </ListView>
            <Grid>
                <Slider Value="{Binding BrightnessWeight}" TickFrequency="1" TickPlacement="BottomRight" Minimum="-1" Maximum="1" HorizontalAlignment="Left" Margin="10,19,0,0" VerticalAlignment="Top" Height="27" Width="332"/>
                <TextBlock Text="{Binding BrightnessWeight, StringFormat='Brightness: {0}'}" HorizontalAlignment="Left" TextAlignment="Center" Margin="10,3,0,0" Width="332" TextWrapping="Wrap" VerticalAlignment="Top" Height="16"/>

                <Slider Value="{Binding IntensityContrastWeight}" TickFrequency="1" TickPlacement="BottomRight" Minimum="-1" Maximum="1" HorizontalAlignment="Left" Margin="10,66,0,0" VerticalAlignment="Top" Height="27" Width="332"/>
                <TextBlock Text="{Binding IntensityContrastWeight, StringFormat='IntensityContrast: {0}'}" HorizontalAlignment="Left" TextAlignment="Center" Margin="10,50,0,0" Width="332" TextWrapping="Wrap" VerticalAlignment="Top" Height="16"/>

                <Slider Value="{Binding SaturationWeight}" TickFrequency="1" TickPlacement="BottomRight" Minimum="-1" Maximum="1" HorizontalAlignment="Left" Margin="10,114,0,0" VerticalAlignment="Top" Height="27" Width="332"/>
                <TextBlock Text="{Binding SaturationWeight, StringFormat='Saturation: {0}'}" HorizontalAlignment="Left" TextAlignment="Center" Margin="10,98,0,0" Width="332" TextWrapping="Wrap" VerticalAlignment="Top" Height="16"/>

                <Slider Value="{Binding BlurrinessWeight}" TickFrequency="1" TickPlacement="BottomRight" Minimum="-1" Maximum="1" HorizontalAlignment="Left" Margin="10,161,0,0" VerticalAlignment="Top" Height="27" Width="332"/>
                <TextBlock Text="{Binding BlurrinessWeight, StringFormat='Blurriness: {0}'}" HorizontalAlignment="Left" TextAlignment="Center" Margin="10,145,0,0" Width="332" TextWrapping="Wrap" VerticalAlignment="Top" Height="16"/>

                <Slider Value="{Binding RegionsOfInterestSizeWeight}" TickFrequency="1" TickPlacement="BottomRight" Minimum="-1" Maximum="1" HorizontalAlignment="Left" Margin="10,209,0,0" VerticalAlignment="Top" Height="27" Width="332"/>
                <TextBlock Text="{Binding RegionsOfInterestSizeWeight, StringFormat='RegionsOfInterestSize: {0}'}" HorizontalAlignment="Left" TextAlignment="Center" Margin="10,193,0,0" Width="332" TextWrapping="Wrap" VerticalAlignment="Top" Height="16"/>

                <Slider Value="{Binding RuleOfThirdsWeight}" TickFrequency="1" TickPlacement="BottomRight" Minimum="-1" Maximum="1" HorizontalAlignment="Left" Margin="10,256,0,0" VerticalAlignment="Top" Height="27" Width="332"/>
                <TextBlock Text="{Binding RuleOfThirdsWeight, StringFormat='RuleOfThirds: {0}'}" HorizontalAlignment="Left" TextAlignment="Center" Margin="10,240,0,0" Width="332" TextWrapping="Wrap" VerticalAlignment="Top" Height="16"/>

                <Slider Value="{Binding ShapeConvexityWeight}" TickFrequency="1" TickPlacement="BottomRight" Minimum="-1" Maximum="1" HorizontalAlignment="Left" Margin="10,304,0,0" VerticalAlignment="Top" Height="27" Width="332"/>
                <TextBlock Text="{Binding ShapeConvexityWeight, StringFormat='ShapeConvexity: {0}'}" HorizontalAlignment="Left" TextAlignment="Center" Margin="10,288,0,0" Width="332" TextWrapping="Wrap" VerticalAlignment="Top" Height="16"/>

                <Slider Value="{Binding BackgroundDistractionWeight}" TickFrequency="1" TickPlacement="BottomRight" Minimum="-1" Maximum="1" HorizontalAlignment="Left" Margin="10,351,0,0" VerticalAlignment="Top" Height="27" Width="332"/>
                <TextBlock Text="{Binding BackgroundDistractionWeight, StringFormat='BackgroundDistraction: {0}'}" HorizontalAlignment="Left" TextAlignment="Center" Margin="10,335,0,0" Width="332" TextWrapping="Wrap" VerticalAlignment="Top" Height="16"/>
            </Grid>
        </DockPanel>
    </Grid>
</Window>
