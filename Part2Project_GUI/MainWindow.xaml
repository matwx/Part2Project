<Window x:Class="Part2Project_GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="566" Width="1697">
    <Window.InputBindings>
        <KeyBinding Key="Escape" Command="{Binding CloseCommand}"></KeyBinding>
        <KeyBinding Key="T" Command="{Binding TestCommand}"></KeyBinding>
    </Window.InputBindings>
    <Window.Resources>
        <DataTemplate x:Key="ItemTemplate">
            <WrapPanel>
                <Image Width="320" Height="240" Source="{Binding}" HorizontalAlignment="Center" RenderOptions.BitmapScalingMode="HighQuality"/>
            </WrapPanel>
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <Button Command="{Binding SelectFolderCommand}" Content="Select Folder" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75"/>
        <DockPanel Margin="0,44,0,0">
            <ListView DockPanel.Dock="Left" ItemsSource="{Binding Images}" ItemTemplate="{StaticResource ItemTemplate}" Width="1020" >
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="3"/>
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>
            </ListView>
            <Grid>
                <Slider Margin="30,5,30,423"></Slider>
            </Grid>
        </DockPanel>
    </Grid>
</Window>
